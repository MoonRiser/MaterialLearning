<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardCornerRadius="4dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:focusable="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<ImageView
    android:id="@+id/horo_image"
    android:layout_width="match_parent"
    android:layout_height="136dp"
    android:scaleType="centerCrop"
    android:transitionName="horoImg"/>

        <TextView
            android:id="@+id/english_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/horo_image"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/chinese_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_alignBottom="@id/english_name"
            android:layout_toRightOf="@id/english_name"
            android:layout_marginLeft="16dp"
            android:textSize="16sp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>